{
  "packageRules": [
    // auto-updates - daily
    {
      "datasources": ["docker"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "schedule": "after 1am and before 5am",
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "adguard/adguardhome",
        "codercom/code-server",
        "tzahi12345/youtubedl-material",
        "ghcr.io/advplyr/audiobookshelf",
        "ghcr.io/onedr0p/qbittorrent",
        "ghcr.io/onedr0p/intel-gpu-exporter",
        "codercom/code-server",
        "adguard/adguardhome",
        "ghcr.io/onedr0p/intel-gpu-exporter",
        "ghcr.io/alexellis/registry-creds",
        "vaultwarden/server",
        "emberstack/kubernetes-reflector"
        //"linuxserver/calibre"
      ]
    },
    // auto-updates - weekly
    {
      "datasources": ["docker"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "schedule": ["before 3am on Monday"],
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "rancher/kubectl",
        "rancher/system-upgrade-controller",
        "restic/restic",
        "alpine",
        "ubuntu",
        "debian",
        "ghcr.io/fluxcd/notification-controller",
        "ghcr.io/fluxcd/kustomize-controller",
        "ghcr.io/fluxcd/helm-controller",
        "ghcr.io/fluxcd/source-controller"
      ]
    },
    {
      "datasources": ["helm"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "schedule": "after 1am and before 5am",
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "grafana",
        "thanos",
        "reloader",
        "kube-prometheus-stack",
        "descheduler",
        "external-secrets",
        "vaultwarden",
        "authentik",
        "node-feature-discovery",
        "intel-device-plugins-operator",
        "intel-device-plugins-gpu",
        "coredns",
        "cert-manager",
        "tailscale",
        "tailscale-operator",
        "audiobookshelf",
        "reflector"
      ]
    },
    {
      "description": "Auto merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Auto merge GitHub Releases",
      "matchDatasources": ["github-releases"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePattern": [
        "github.com/maxlerebourg/crowdsec-bouncer-traefik-plugin",
        "github.com/k8snetworkplumbingwg/multus-cni"
      ]
    },
    {
      "description": "Auto merge GitHub Releases",
      "matchDatasources": ["github-releases","ansible"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["patch"],
      "matchPackagePattern": [
        "github.com/rancher/rke2"
      ]
    },
    {
      "description": "Auto merge GitHub Tags",
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePattern": [
        "github.com/jetstack/cert-manager"
      ]
    },
    {
      "description": "Auto merge container digests",
      "matchDatasources": ["docker"],
      "automerge": false,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": ["digest"],
      "matchPackagePattern": [
        "ghcr.io/onedr0p",
        "mirioeggmann/cloudflare-ddns"
      ]
    },
    {
      "datasources": ["helm"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "schedule": "after 1am and before 5am",
      "updateTypes": ["patch"],
      "packageNames": [
        "secrets-store-csi-driver",
        "vault"
      ]
    }
  ]
}
